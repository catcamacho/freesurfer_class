#! /bin/csh -f
#
# Usage: regenSurfaces subjectFolder


setenv SUBJECTS_DIR /Applications/freesurfer/subjects

set sub = $argv[1]	
	
	
echo
echo "****************************************************"
echo
echo "                    Finshing "$sub
echo
echo "****************************************************"

recon-all -s $sub -autorecon3 -qcache

echo
echo
echo	
if ( -e $SUBJECTS_DIR/$sub/scripts/recon-all.done) then
	echo "Surfaces for "$sub" regenerated successfully!"
else
	echo "ERROR!! Surfaces for "$sub" failed to generate."
endif

